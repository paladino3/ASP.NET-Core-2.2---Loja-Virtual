@model Cliente
@{
    ViewData["Title"] = "Cadastro";
}

<form asp-action="CadastroCliente" asp-controller="home" method="post">
    <main role="main">

        <section class="container" style="margin-top: 50px">
            <div class="row">
                <aside class="col-sm-6">
                    <h3 class="subtitle-doc">
                        Área de registro
                    </h3>
                    <div id="code_register_1">
                        <div class="card">
                            <header class="card-header">
                                <a href="/home/login" class="float-right btn btn-outline-primary mt-1">Log in</a>
                                <h4 class="card-title mt-2">Cadastre-se</h4>
                            </header>
                            <article class="card-body">
                                @if (TempData["MSG_S"] != null)
                                {
                                    <p class="alert alert-success">@TempData["MSG_S"]</p>
                                }
                                <div class="form-row">
                                    <div class="col form-group">
                                        <label asp-for="Nome">Seu nome e sobrenome</label>
                                        <input type="text" asp-for="Nome" class="form-control" placeholder="Ex. Wesley Rolim">
                                        <span asp-validation-for="Nome"></span>
                                    </div>
                                    <div class="col form-group">
                                        <label asp-for="Nascimento">Data de nascimento</label>
                                        <input type="date" asp-for="Nascimento" class="form-control" placeholder="EX: 01/01/1999">
                                        <span asp-validation-for="Nascimento"></span>
                                    </div> 
                                </div> 

                                <div class="form-group">
                                    <label class="form-check form-check-inline">
                                        <input class="form-check-input" type="radio" asp-for="Sexo" value="M">
                                        <span class="form-check-label"> Masculino </span>
                                    </label>
                                    <label class="form-check form-check-inline">
                                        <input class="form-check-input" type="radio" asp-for="Sexo" value="F">
                                        <span class="form-check-label"> Femenino</span>
                                    </label>
                                        <span asp-validation-for="Sexo"></span>
                                </div>
                                <div class="form-row col-12-24">
                                    <div class="col form-group">
                                        <label asp-for="Telefone">Celular</label>
                                        <input type="text" asp-for="Telefone" class="form-control" placeholder="">
                                        <span asp-validation-for="Telefone"></span>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label asp-for="CPF">CPF</label>
                                    <input type="text" asp-for="CPF" class="form-control" placeholder="">
                                    <span asp-validation-for="CPF"></span>
                                </div> 

                                <div class="form-group">
                                    <label asp-for="Email">E-mail</label>
                                    <input type="email" asp-for="Email" class="form-control" placeholder="Ex. Joãodasilva@gmail.com">
                                    <small class="form-text text-muted">
                                        Nunca compartilharemos seu email com mais ninguém.
                                    </small>
                                    <span asp-validation-for="Email"></span>
                                </div> 
                                <div class="form-group">
                                    <label asp-for="Senha">Senha</label>
                                    <input class="form-control" asp-for="Senha" type="password">
                                    <span asp-validation-for="Senha"></span>
                                </div>
                                <div class="form-group">
                                    <button type="submit" class="btn btn-primary btn-block"> Enviar </button>
                                </div> 
                                <small class="text-muted">
                                    Ao clicar no botão "Inscrever-se", você confirma que aceita nossos
                                    <br> Termos de uso e politica de privacidade.
                                </small>
                            </article>
                            <div class="border-top card-body text-center">Já tem um cadastro?<a href="/home/login">Cadastrar</a></div>
                        </div> 
                    </div> 
                </aside>
            </div>
        </section>
    </main>
</form>